{
  "name": "polycode-electron",
  "version": "0.1.0",
  "description": "Desktop app for orchestrating multiple Claude Code sessions",
  "main": "out/main/index.js",
  "author": "billpeet",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "start:prod": "bun run build && NODE_ENV=production electron .",
    "test": "bun test src/main/driver/__tests__",
    "dist": "bun run build && electron-builder --win",
    "dist:publish": "bun run build && electron-builder --win --publish always"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "@sentry/electron": "^7.8.0",
    "@sentry/react": "^10.40.0",
    "better-sqlite3": "^11.10.0",
    "dompurify": "^3.3.1",
    "electron-updater": "^6.3.9",
    "fuse.js": "^7.1.0",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.12",
    "uuid": "^11.1.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@sentry/vite-plugin": "^5.1.0",
    "@tailwindcss/vite": "^4.0.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "33.4.11",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "png-to-ico": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "build": {
    "appId": "com.polycode.app",
    "productName": "Polycode",
    "copyright": "Copyright Â© 2026 billpeet",
    "npmRebuild": false,
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**",
      "**/*.node"
    ],
    "files": [
      "out/**",
      "resources/**"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": ["x64"]
      }],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "billpeet",
      "repo": "polycode",
      "releaseType": "release"
    }
  }
}
